<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientLogIn">

  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/topAppBar"
      style="@style/Widget.MaterialComponents.Toolbar.Primary"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:layout_constraintTop_toTopOf="parent"
      app:navigationIcon="?attr/actionModeCloseDrawable"
      app:title="@string/log_in" />

  <EditText
      android:id="@+id/editTextTextEmailAddress"
      android:layout_width="350dp"
      android:layout_height="50dp"
      android:layout_marginTop="24dp"
      android:autofillHints="@string/log_in_email_hint"
      android:ems="10"
      android:hint="@string/log_in_email_hint"
      android:inputType="textEmailAddress"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.508"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/topAppBar" />

  <EditText
      android:id="@+id/editTextTextPassword"
      android:layout_width="350dp"
      android:layout_height="50dp"
      android:layout_marginTop="25dp"
      android:autofillHints="@string/password_hint"
      android:ems="10"
      android:hint="@string/password_hint"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.508"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

  <Button
      android:id="@+id/buttonAreYouAuthorizedCourier"
      android:layout_width="320dp"
      android:layout_height="50dp"
      android:layout_marginTop="30dp"
      android:text="@string/log_in_authorized_courier"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.508"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonClientLogInGoogle" />

  <TextView
      android:id="@+id/textViewClickHereToSignUp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/click_here_to_sign_up"
      android:textColor="#0277BD"
      android:textSize="18sp"
      android:textStyle="normal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewNewToDeAR" />

  <TextView
      android:id="@+id/textViewNewToDeAR"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:clickable="true"
      android:text="@string/new_to_dear"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonAreYouAuthorizedCourier" />

  <Button
      android:id="@+id/buttonClientLogIn"
      android:layout_width="320dp"
      android:layout_height="50dp"
      android:layout_marginTop="32dp"
      android:text="@string/log_in_button"
      android:visibility="visible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

  <Button
      android:id="@+id/buttonClientLogInGoogle"
      android:layout_width="320dp"
      android:layout_height="50dp"
      android:layout_marginTop="40dp"
      android:text="@string/log_in_google"
      app:icon="@drawable/google__g__logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/divider1" />

  <TextView
      android:id="@+id/divider2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="48dp"
      android:text="@string/log_in_divider_or"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonClientLogIn" />

  <View
      android:id="@+id/divider1"
      android:layout_width="160dp"
      android:layout_height="2dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="56dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonClientLogIn" />

  <View
      android:id="@+id/divider3"
      android:layout_width="160dp"
      android:layout_height="2dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="16dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonClientLogIn" />

</androidx.constraintlayout.widget.ConstraintLayout>